mixin s-servises()
	// start s-servises
	+b.s-servises.section#s-servises&attributes(attributes)
		.container
			+b.section-title.text-center(class="wow fadeInUp" data-wow-duration="0.8s")
				h2 Какие работы мы проводим
				+e.text.text-primary Выберите интересующее направление
			+b.tabs
				+e.caption(class="wow fadeInUp" data-wow-duration="0.8s")
					+e.btn.active
						+icon('fire')
						| Пожарная безопасность
					
					+e.btn
						+icon('water')
						| Водоснабжение

					+e.btn
						+icon('fan')
						| Вентиляция
					+e.btn
						+icon('plug-silhouette')
						| Электросети
					
					+e.btn
						+icon('usb-symbol')
						| Слаботочные системы

			
				+e.wrap
					mixin tab-slide(i, t)
						+e.slide.swiper-slide
							+e.link.img-bg.popup-with-move-anim(href="#modal-call" data-order=`Оставить заявку на - ${t}` data-title="Оставить заявку" data-sub-title="Заполните форму, и мы свяжемся с Вами в течение 15 минут для уточнения деталей" data-btn="Оставить заявку")
								img.lazy-bg(src="#" data-src=`img/tab-img-${i}.jpg`, alt="")
							
								+e.item
									+e.title= t
									+e.btn-modal() Оставить заявку

						// /+e.slide.swiper-slide
					mixin cont()
						+e.content&attributes(attributes)
							+e.slider--js.swiper-container(class="wow fadeInUp" data-wow-duration="0.8s")
								.swiper-wrapper
									block
								.swiper-pagination
					+cont()(class="active")
						+tab-slide('1','Пожарная безопасность')
						+tab-slide('2','Охранопожарная сигнализация')
						+tab-slide('3','Оповещение людей о пожаре')
						+tab-slide('4','Пожаротушение')
					+cont() 
						+tab-slide('2-1','Водоснабжение')
						+tab-slide('2-2','Отопление')
						+tab-slide('2-3','Водоотведение') 
					+cont() 
						+tab-slide('3-1','Вентиляция')
						+tab-slide('3-2','Кондиционирование')
						+tab-slide('3-3','Дымоудаление') 
					+cont() 
						+tab-slide('4-1','Электросети')
						+tab-slide('4-2','Освещение')
						+tab-slide('4-3','Электрические подстанции')
					+cont() 
						+tab-slide('5-1','Слаботочные системы')
						+tab-slide('5-2','Контроль доступа')
						+tab-slide('5-3','Видеонаблюдение')
						+tab-slide('5-4','Системы связи')
	// end s-servises